{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/webhook",
            "destination": "/api/telegram-webhook"
        },
        {
            "source": "/bot-webhook",
            "destination": "/api/telegram-webhook"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/**/*.ts": {
            "maxDuration": 10
        }
    }
}